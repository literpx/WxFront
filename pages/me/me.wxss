  height: 50px;
  align-items: center;
}
.icon{
  width: 50px;
  text-align: center
}
.itemName{
  width: 40%;
  font-size: 14px;
  font-weight: bold
}
.line{
  height: 10px;
}
.hr{
  height: 1px;
  background-color: #ccc;
  opacity: 0.2
}
.remark{
