.amountBg{
  height: 100px;
  background-color: #86795c;
  display: flex;
  flex-direction: row;
  align-items: center
}
.img{
  margin-left: 20px;
}
.account{
  width: 70%;
  color: #fff;
  margin-left: 10px;
}
.nav{
  width: 15px;
  color: #fff;
}
.content{
  background-color: #f4f4f4;
  height: 500px;
}
.order{
  width: 94%;
  height: 70px;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-radius: 5px;
  text-align: center;
  align-items: center;
  position:absolute;
  top: 90px;
  margin-left: 3%
}
.desc{
  width: 50%;
  font-size: 13px;
}
.clear{
  padding-top: 70px;
}
.item{
  background-color: #fff;
