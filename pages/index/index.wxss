.head{
  height: 175px;
  background-color: rgb(165, 91, 91);
  width: 100%;
}
.search{
  text-align: center;
}
.search input{
  background-color: #fff;
  color: #000;
  width: 80%;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  border-radius: 5px;
  text-align: center;
  margin: 0 auto
}
.search view image{
  width: 35px;
  height:35px;
  position: absolute;
  top: 2px;
  right: 11%;
  z-index: 9999
}
.advertising{
  width: 96%;
  height: 200px;
  position: absolute;
  top:50px;
  left: 2%;
  background-color: #000;
}
.center{
  background-color: #fffefe;
  width: 100%;
}
.nav{
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin-top: 80px;
}
.select{
  width: 32%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  color: #000;
  font-size: 18px;
  font-weight: bold;
  border-bottom: 5px solid #777;
}
.normal{
  width: 32%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  color: #000;
  font-size: 16px;
}
.line{
  height: 50px;
  line-height: 50px;
  font-size: 25px;
  color: rgb(157, 212, 230)
}
.swiper-item-head{
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  padding-right: 20px;
  width: 100%;
  margin-top: 5px;
}
.swiper-item-head .item-head{
  width: 77%
}
.swiper-item-head .item-more{
  font-size: 14px;
}

/**歌单渲染开始**/
.swiper-item-content{
  margin-top: 5px;
  width: 100%
}
/*模版一*/
.audio-item-select{
  padding-left: 15px;
  padding-top: 5px;
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  background: linear-gradient(to bottom right, rgb(255, 255, 255) ,  rgb(224, 220, 220));
  width: 100%;
  border-left: 5px solid #777;

}
.audio-item-normal{
  padding-left: 20px;
  padding-top: 5px;
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  background: linear-gradient(to bottom right, rgb(255, 255, 255) ,  rgb(224, 220, 220));
  width: 100%; 
  
}
.audio-item-select .song-content,.audio-item-normal .song-content{
  width: 55%;
  margin-left: 10px;
}
.audio-item-select .song-content .song-name,.audio-item-normal .song-content .song-name{
  font-size: 16px;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
}
.audio-item-select .song-content .song-author,.audio-item-normal .song-content .song-author{
  font-size: 13px;
}
.audio-item-select  .play-btn-right,.audio-item-normal .play-btn-right{
  margin-left: 10px;
  margin-top: 20px;
}
.hr{
  width: 100%;
  height: 1px;
  background-color: #000;
  opacity: 0.6;
}
