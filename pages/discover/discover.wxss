.shareList{
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  
}
.hr{
  width: 100%;
  height: 1px;
  opacity: 0.3;
  background-color: #444;
  margin-top: 5px;
}
.shareItem{
  margin: 10px auto;
  display: flex;
  flex-direction: row;
  width: 95%;  
}
.item-left{
  width: 50px;
  height: 50px;
  margin-left: 5px;
}
.item-right{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  width: 82%;
}
.user{
  font-size: 18px;
   width: 100%
}
.content{
  margin-top: 5px;
  font-size: 16px;
  width: 100%
}
.song{
  margin-top: 5px;
  display: flex;
  flex-direction: row;
   width: 95%;
   height: 60px;
   background-color: rgb(224, 217, 217);
   padding: 5px 5px;
   position: relative
}
.song-info{
  display: flex;
  flex-direction: column;
   margin-left: 10px;
  width: 80%;
  height:60px;
  justify-content: space-around;
}

.songName{
  width: 90%;
  font-size: 16px;
  color: rgb(97, 92, 139);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
 .authore{
   font-size: 15px; 
    color: rgb(114, 88, 52)
}
.play{
  position: absolute;
  left: 15px;
  top:15px;
  z-index: 999
}
.time{
  margin-top: 3px;
  font-size: 16px;
  color: rgb(153, 145, 145)
}
