/* pages/song/songe.wxss */
page{
  height: 100%;
  width: 100%;
}
/*上*/
.content{
  height: 100%;
  width: 100%;
  background: linear-gradient(rgb(83, 71, 71), rgb(197, 197, 206)); /* 标准的语法 */
  margin-top: 0px;
}
.content2{
    height: 100%;
  width: 100%;
  background-color: rgba(58, 32, 32, 0.466);
  margin-top: 0px;
}
.songInfo{
  width: 100%;
  color: #fff;
  text-align: center;
  height:70px;
}
.songInfo .null{
  height: 10px;
  width: 100%;
}
.songInfo .name{
font-size: 18px;
}
.songInfo .author{
font-size: 14px;
margin-top: 10px;
}

/*中*/
.out-play{
  width: 300px;
  height: 300px;
  border-radius: 150px;
  background-color: #333;
  margin: 0 auto;
  position: relative;
  animation: rotate 18s linear infinite;
}
.out-stop{
  width: 300px;
  height: 300px;
  border-radius: 150px;
  background-color: #333;
  margin: 0 auto;
  position: relative;
}
.within,.within image{
  width: 280px;
  height: 280px;
  border-radius: 140px;
  margin: 10px auto;
}
@keyframes rotate{from{transform: rotate(0deg)}
    to{transform: rotate(359deg)}
}



